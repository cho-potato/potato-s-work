CREATE TABLE DEPT(
	DEPTNO NUMBER PRIMARY KEY
	, DNAME VARCHAR2(20)
	, LOC VARCHAR2(30)
);

CREATE SEQUENCE SEQ_DEPT
INCREMENT BY 1
START WITH 1;

CREATE TABLE EMP (
	EMPNO NUMBER PRIMARY KEY
	, ENAME VARCHAR2(20)
	, SAL NUMBER DEFAULT 0
	, JOB VARCHAR2(20)
	, DEPTNO NUMBER
	, CONSTRAINT FK_DEPT_EMP FOREIGN KEY (DEPTNO) REFERENCES DEPT(DEPTNO)
);

CREATE SEQUENCE SEQ_EMP
INCREMENT BY 1
START WITH 1;